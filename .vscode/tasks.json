{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "if [ -f '${fileDirname}/src/Projectile.cpp' ]; then cd '${fileDirname}' && clang++ -std=c++17 -Wall -Wextra -O2 -g -I./include main.cpp src/*.cpp -o bin/${fileBasenameNoExtension}; else clang++ -std=c++17 -Wall -Wextra -O2 -g '${file}' -o '${workspaceFolder}/bin/${fileBasenameNoExtension}'; fi"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile C++ with clang++ (C++17, optimized) - auto-detects multi-file projects"
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "if [ -f '${fileDirname}/src/Projectile.cpp' ]; then cd '${fileDirname}' && clang++ -std=c++17 -Wall -Wextra -O2 -g -I./include main.cpp src/*.cpp -o bin/${fileBasenameNoExtension} && ./bin/${fileBasenameNoExtension}; else clang++ -std=c++17 -Wall -Wextra -O2 -g '${file}' -o '${workspaceFolder}/bin/${fileBasenameNoExtension}' && '${workspaceFolder}/bin/${fileBasenameNoExtension}'; fi"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true,
                "focus": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile and immediately execute (F5 shortcut) - auto-detects multi-file projects"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/bin/*",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "detail": "Remove all compiled binaries"
        },
        {
            "label": "Debug Build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O0",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}_debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Debug build: No optimization, full debug symbols"
        },
        {
            "label": "Release Build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O3",
                "-DNDEBUG",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}_release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Release build: Maximum optimization, no debug info"
        },
        {
            "label": "Profile Build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "-g",
                "-pg",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}_profile"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Profile build: Moderate optimization with profiling enabled"
        },
        {
            "label": "Build with Address Sanitizer",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O1",
                "-g",
                "-fsanitize=address",
                "-fno-omit-frame-pointer",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}_asan"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build with AddressSanitizer to detect memory errors"
        },
        {
            "label": "Build with Undefined Behavior Sanitizer",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O1",
                "-g",
                "-fsanitize=undefined",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}_ubsan"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build with UndefinedBehaviorSanitizer to detect undefined behavior"
        }
    ]
}